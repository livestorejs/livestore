{
  "name": "livestore-example-web-email-client-prototype",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "dependencies": {
    "@cloudflare/workers-types": "4.20250823.0",
    "@livestore/adapter-cloudflare": "0.4.0-dev.7",
    "@livestore/adapter-web": "0.4.0-dev.7",
    "@livestore/livestore": "0.4.0-dev.7",
    "@livestore/react": "0.4.0-dev.7",
    "@livestore/sqlite-wasm": "0.4.0-dev.7",
    "@livestore/sync-cf": "0.4.0-dev.7",
    "@livestore/wa-sqlite": "0.4.0-dev.7",
    "react": "^19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@livestore/devtools-vite": "0.4.0-dev.7",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/vite": "^4.1.12",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@vitejs/plugin-react": "^5.0.1",
    "concurrently": "^9.0.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "wrangler": "^4.33.0"
  },
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "build": "VITE_LIVESTORE_SYNC_URL=https://livestore-email-client-prototype.schickling.workers.dev vite build && wrangler build",
    "deploy": "pnpm build && pnpm deploy:cf && pnpm deploy:netlify",
    "deploy:cf": "wrangler deploy",
    "deploy:netlify": "bunx netlify-cli deploy --prod --no-build --dir=dist",
    "dev": "concurrently \"pnpm wrangler dev\" \"VITE_LIVESTORE_SYNC_URL=http://localhost:8787 vite dev --force\"",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "preview": "vite preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit"
  }
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:daily",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":semanticPrefixFixDepsChoreOthers"
  ],
  "baseBranches": [
    "dev"
  ],
  "platformAutomerge": true,
  "automerge": true,
  "automergeType": "pr",
  "packageRules": [
    {
      "matchCategories": [
        "node"
      ],
      "enabled": false
    },
    {
      "description": "Exclude Expo / React Native packages",
      "enabled": false,
      "matchPackageNames": [
        "/^expo-/",
        "/^@expo//",
        "/^react-native-/",
        "/^@react-native//"
      ]
    },
    {
      "description": "Exclude React packages",
      "matchPackageNames": [
        "react",
        "react-dom",
        "/^react-/",
        "/^@react-/"
      ],
      "enabled": false
    },
    {
      "description": "Exclude workspace packages",
      "enabled": false,
      "matchPackageNames": [
        "/^@livestore//"
      ]
    },
    {
      "description": "Auto-merge patch and minor updates",
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true
    },
    {
      "description": "Manual review for major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "nix": {
    "enabled": true
  }
}

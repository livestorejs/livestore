{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:daily",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":semanticPrefixFixDepsChoreOthers"
  ],
  "baseBranches": ["dev"],
  "platformAutomerge": true,
  "automerge": true,
  "automergeType": "pr",
  "packageRules": [
    {
      "description": "Exclude Expo / React Native packages",
      "matchPackagePatterns": ["^expo-", "^@expo/", "^react-native-", "^@react-native/"],
      "enabled": false
    },
    {
      "description": "Exclude React packages",
      "matchPackagePatterns": ["^react-", "^@react-"],
      "matchPackageNames": ["react", "react-dom"],
      "enabled": false
    },
    {
      "description": "Exclude workspace packages",
      "matchPackagePatterns": ["^@livestore/"],
      "enabled": false
    },
    {
      "description": "Auto-merge patch and minor updates",
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    },
    {
      "description": "Manual review for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],
  "lockFileMaintenance": {
    "enabled": false
  },
  "node": {
    "enabled": false
  },
  "pnpm": {
    "enabled": true
  }
}
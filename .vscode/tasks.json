{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pnpm-install",
      "type": "shell",
      "command": "direnv exec . pnpm install",
      "problemMatcher": [],
      "presentation": {
        "focus": true,
        "panel": "shared",
        "group": "pnpm",
        "showReuseMessage": false,
        "clear": false,
        "close": true
      }
    },
    {
      "label": "build:clean",
      "type": "shell",
      "command": "direnv exec . pnpm build:clean",
      "problemMatcher": [],
      "presentation": {
        "focus": true,
        "panel": "shared",
        "group": "dev",
        "showReuseMessage": false,
        "clear": false,
        "close": true
      }
    },
    {
      "label": "dev:website",
      "type": "shell",
      "command": "direnv exec . pnpm dev",
      "isBackground": true,
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/website"
      },
      "presentation": {
        "focus": false,
        "panel": "shared",
        "group": "website",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "dev:proxy",
      "type": "shell",
      "command": "direnv exec . fkill --silent :443 && caddy run",
      "problemMatcher": {
        "owner": "caddy",
        "pattern": {
          "regexp": "^\\d{4}/\\d{2}/\\d{2} \\d{2}:\\d{2}:\\d{2}\\.\\d{3} ERROR\\s+(.*)$",
          "severity": 1,
          "message": 2
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Caddyfile.*$",
          "endsPattern": "^.*serving initial configuration.*$"
        }
      },
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/.infra"
      },
      "presentation": {
        "focus": false,
        "panel": "shared",
        "group": "dev:proxy",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "dev:ts",
      "type": "shell",
      "command": "direnv exec . pnpm dev:ts",
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true,
      "presentation": {
        "focus": false,
        "panel": "shared",
        "group": "dev",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "dev:example",
      "dependsOn": [
        "dev:example:todomvc",
        "dev:example:todomvc-custom-elements",
        "dev:example:linearlite",
      ],
      "problemMatcher": [],
    },
    {
      "label": "dev:example:todomvc",
      "dependsOn": [
        "dev:ts",
        "dev:proxy",
      ],
      "type": "shell",
      "command": "direnv exec . pnpm dev",
      "isBackground": true,
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/examples/src/todomvc"
      },
      "presentation": {
        "focus": false,
        "panel": "shared",
        "group": "examples:todomvc",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "dev:example:todomvc-custom-elements",
      "dependsOn": [
        "dev:ts",
        "dev:proxy",
      ],
      "type": "shell",
      "command": "direnv exec . pnpm dev",
      "isBackground": true,
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/examples/src/todomvc-custom-elements"
      },
      "presentation": {
        "focus": false,
        "panel": "shared",
        "group": "examples:todomvc-custom-elements",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "dev:example:linearlite",
      "dependsOn": [
        "dev:ts",
        "dev:proxy",
      ],
      "type": "shell",
      "command": "direnv exec . pnpm dev",
      "isBackground": true,
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/examples/src/linearlite"
      },
      "presentation": {
        "focus": false,
        "panel": "shared",
        "group": "examples:linearlite",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "lint",
      "type": "shell",
      "command": "direnv exec . pnpm lint:check",
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "focus": false,
        "panel": "shared",
        "group": "dev:lint",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "direnv exec . pnpm test",
      "problemMatcher": [],
      "presentation": {
        "focus": true,
        "panel": "shared",
        "group": "test",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}

{
  "private": true,
  "scripts": {
    "build": "pnpm run build:ts",
    "build:clean": "bash -c \"find {examples,packages,examples-monorepo} -path '*node_modules*' -prune -o \\( -name 'dist' -type d -o -name '*.tsbuildinfo' \\) -exec rm -rf {} +\"",
    "build:ts": "tsc --build tsconfig.dev.json && tsc --build tsconfig.all.json",
    "dev:ts": "tsc --build tsconfig.dev.json --watch",
    "circular": "madge --circular --no-spinner examples/*/src packages/*/*/src",
    "lint:check": "eslint examples packages --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint examples packages --ext .ts,.tsx --fix",
    "release:patch": "pnpm run build && pnpm --filter '@livestore/*' --filter 'effect-db-schema' exec -- npm version patch --no-workspaces-update && pnpm --filter '@livestore/*' --filter 'effect-db-schema' exec -- pnpm publish --no-git-checks",
    "release:dev": "pnpm run build && pnpm --filter '@livestore/*' --filter 'effect-db-schema' exec -- npm version prerelease --preid=dev --no-workspaces-update && pnpm --filter '@livestore/*' --filter 'effect-db-schema' exec -- pnpm publish  --tag dev --no-git-checks",
    "test": "CI=1 pnpm --parallel run test"
  },
  "resolutions": {
    "@livestore/devtools-react": "0.0.57"
  },
  "devDependencies": {
    "@effect/language-service": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "7.17.0",
    "@typescript-eslint/parser": "7.17.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-only-warn": "1.1.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unicorn": "55.0.0",
    "madge": "^6.1.0",
    "netlify-cli": "^17.34.3",
    "playwright": "1.46.1",
    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "2.5.1",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.9.0",
  "pnpm": {
    "patchedDependencies": {
      "playwright@1.46.1": "patches/playwright@1.46.1.patch"
    }
  }
}